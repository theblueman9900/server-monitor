{
  "name": "monitor-server",
  "version": "1.0.0",
  "description": "server for monitoring systems",
  "main": "./index.server.js",
  "author": "Souraj",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "start": "npm run clean && node -r dotenv/config .",
    "dev": "nodemon -r dotenv/config .",
    "prod": "NODE_ENV=production nodemon -r dotenv/config .",
    "dev:watch": "nodemon -r dotenv/config .",
    "format": "prettier --write \"{src,app,demo,hoc,public,styles,layout,types}/**/*.{js,ts,tsx,d.ts}\""
  },
  "prettier": {
    "printWidth": 300,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "keywords": [
    "hrms",
    "mern",
    "project",
    "backend"
  ],
  "dependencies": {
    "cors": "^2.8.5",
    "dockerode": "^4.0.2",
    "dotenv": "^10.0.0",
    "express": "^4.18.1",
    "express-validator": "^6.11.1",
    "mongoose": "^6.4.0",
    "morgan": "^1.10.0",
    "systeminformation": "^5.23.5"
  },
  "devDependencies": {
    "dotenv": "^10.0.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "puppeteer": "^21.3.1"
  }
}
